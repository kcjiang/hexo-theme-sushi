
<%
const categoriesList = list_categories(site.categories, {class: 'tag-list-item ', orderby: 'length', order: 'desc', style: false, show_count: false, separator: ' '});
const tagsList = list_tags(site.tags, {class: {a: 'tag-list-item'}, orderby: 'length', order: 'desc', style: false, show_count: false, separator: ' '});
const archivesList = list_archives({class: 'archive', type: 'monthly', order: 'desc', style: false, show_count: false, separator: ' '});
%>

<% if (is_year() === false) { %>
  <div id="archive">

    <h1>Archives</h1>

    <% if (theme.atom !== undefined) { %>
      <p>
        The feed is available via
        <a href="<%=theme.atom%>">atom</a>.
      </p>
      <br>
    <% } %>

    <aside>
      <h2>Categories</h2>
      <% if (categoriesList !== "") { %>
        <%-categoriesList%>
      <% } else { %>
        <p>None.</p>
      <% } %>
    </aside>
    <br>

    <aside>
      <h2>Tags</h2>
      <% if (tagsList !== "") { %>
        <%-tagsList%>
      <% } else { %>
        <p>None.</p>
      <% } %>
    </aside>
    <br>

    <aside>
      <h2>Archives</h2>
      <% if (archivesList !== "") { %>
        <%-archivesList%>
      <% } else { %>
        <p>None.</p>
      <% } %>
    </aside>

  </div>
<% } else { %>

  <h1><%=page.month + '/' + page.year%></h1>

  <% page.posts.each(article => { %>
    <div class="archive-item">
      <a href="<%=url_for(article.path)%>">
        <%=article.title%>
      </a>
      <time datetime="<%=date_xml(article.date)%>">
        <%=date(article.date)%>
      </time>
    </div>
  <% }) %>

  <div id="paginator">
    <%-paginator()%>
  </div>

<% } %>
