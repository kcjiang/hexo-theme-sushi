
<%
var bodyClass = "standard";
if (is_home()) bodyClass = "home";
if (is_post()) bodyClass = "post";
if (is_page()) bodyClass = "page";
if (is_tag()) bodyClass = "tag";
if (is_archive()) bodyClass = "archive";
if (is_category()) bodyClass = "category";
%>

<%
var classAdd = "";
if (page.total > 1) classAdd = " paged-next";
%>

<!DOCTYPE html>
<html lang="<%=config.language%>">

<%-partial('partials/head')%>

<body class="<%=bodyClass%>-template<%=classAdd%>">
  <%-partial('partials/icons')%>

  <div class="site">
      <%-partial('partials/header')%>

      <% if (is_home()) { %>
          <%-partial('partials/cover')%>
          <%-partial('partials/featured')%>
      <% } %>

      <div class="site-content">
          <%- body %>
      </div>

      <%-partial('partials/footer')%>
      <%-partial('partials/modal')%>
      <%-partial('partials/pswp')%>
  </div>

  <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous">
  </script>
  <% if (theme.scripts !== undefined && theme.scripts.length > 0) { %>
    <!-- scripts list from theme config.yml -->
    <% theme.scripts.forEach(url => { %>
      <script src="<%=url%>"></script>
    <% }); %>
  <% } %>

</body>
</html>
